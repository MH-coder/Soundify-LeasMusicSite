    <title>Create New Post</title>
</head>

<body style="background-color: #343a40">

    <div class="topnav" id="myTopnav">
        <div class="rd-navbar-brand"><a class="brand" href=""><img class="brand-logo-dark"
                    src="images/PicsArt_12-07-06.24.32.png" alt="" width="112" height="21" /><img
                    class="brand-logo-light" src="images/PicsArt_12-07-06.24.32.png" alt="" width="150" height="10"
                    style="margin-left: -20px;" /></a>
        </div>
        <a href="" class="" style="float: right;">ADMIN PANEL</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-auto">
            <h1 style="color: white;">CREATE POST</h1>
        </div>
    </div>

    <div class="row">
        <div class="col p-5">
            <div class="card">
                <div class="card-header">
                    <strong>Create new</strong> Event
                </div>
                <div class="card-body card-block">
                    <form class="" action="/newPost" method="post">
                        <!-- Event Name -->
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="eventName" class=" form-control-label">Event Name</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="eventName" name="eventName" placeholder="" class="form-control">
                                <small class="form-text text-muted">Enter event name</small>
                            </div>
                        </div>

                        <!-- Event Desc -->
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="eventDesc" class=" form-control-label">Event Description</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <textarea name="eventDesc" id="eventDesc" rows="9" placeholder="Description...."
                                    class="form-control"></textarea>
                            </div>
                        </div>

                        <!-- Artist name -->
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="artistName" class=" form-control-label">Artist Name</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="artistName" name="artistName" placeholder=""
                                    class="form-control">
                                <small class="form-text text-muted">Enter Artist name</small>
                            </div>
                        </div>

                        <!-- Date -->
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="eventDate" class=" form-control-label">Date</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="eventDate" name="eventDate" placeholder="" class="form-control">
                                <small class="form-text text-muted">Enter date of event</small>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="status" class=" form-control-label">Event Status</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <select name="status" id="status" class="form-control">
                                    <option value="0" disabled>Please select</option>
                                    <option value="active">Active</option>
                                    <option value="cancelled">Cancelled</option>
                                </select>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Submit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>

    </script>
